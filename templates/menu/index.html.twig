{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
<div class="container">
    <h1 class="txt">Menu</h1>
    <table class="table text-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for menu in menus %}
            <tr>
                <td>{{ menu.id }}</td>
                <td>{{ menu.name }}</td>
                <td>
                    <a class="btn btn-primary mx-1" href="{{ path('app_menu_show', {'id': menu.id}) }}">Afficher</a>
                    <a class="btn btn-warning mx-1" href="{{ path('app_menu_edit', {'id': menu.id}) }}">modifier</a>
                    {{ include('menu/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">liste vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-success mx-1" href="{{ path('app_menu_new') }}">Ajouter</a>
</div>
{% endblock %}
