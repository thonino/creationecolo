{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="d-flex flex-column align-items-center">
    <h3 class="text-center txt">
    Tout nos produits 
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-success"style="max-width: 350px;" href="{{ path('app_products_new') }}">Nouveau Produit</a></h3>
    {% endif %}
</div>
<div class="d-flex justify-content-center flex-wrap ">
    {% for product in products %}
        <div class="card m-2 text-light" style="max-width: 300px;">
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-secondary text-success " href="{{ path('app_products_edit', {'id': product.id}) }}">Modifier</a>
            {% endif %}
            <div class="col-12">
            <img src="/img/{{product.image}}.jpg" class="card-img-top" alt="...">
            <h5 class="card-card  fs-5 mx-2 text-secondary " style="margin-top: -30px">{{ product.name }}   </h5>
                <div class="">
                        <h5 class="card-card text-center text-warning fs-2">{{ product.price }}€ </h5>
                        <span class="d-flex justify-content-center">
                        {# <a class="btn btn-warning mb-2 mt-2 text-dark" href="{{ // path('cart_add', {'products' : products.id})}}">Ajouter au panier</a><br> #}
                        <a class="btn btn-warning mb-2  text-dark" href="#">Ajouter au panier</a><br>
                        <a class="btn fond mb-2  mx-1" href="{{ path('app_products_show', {'id': product.id}) }}">Détail</a>
                        
                        </span>
                </div>
            </div>
        </div>
    {% else %}
        <p>votre panier est vide</p>
    {% endfor %}
</div>
{% endblock %}
