{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="d-flex flex-column align-items-center">
    <h1 class="text-center">Tout nos produits </h1>
    <a class="btn btn-success"style="max-width: 350px;" href="{{ path('app_products_new') }}">Nouveau Produit</a>
</div>
<div class="d-flex justify-content-center flex-wrap ">
    {% for product in products %}
        <div class="card m-2 text-light" style="max-width: 380px;">
            <div class="col-12">
            <img src="/img/{{product.image}}.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                        <h5 class="card-card text-center text-warning fs-1">{{ product.price }}€ </h5>
                        <h5 class="card-card">{{ product.name }} </h5>
                        <h5 class="card-card">{{ product.description }} </h5>
                        <span class="d-flex justify-content-center">
                        {# <a class="btn btn-warning mb-2 mt-2 text-dark" href="{{ // path('cart_add', {'products' : products.id})}}">Ajouter au panier</a><br> #}
                        <a class="btn btn-warning mb-2 mt-2 text-dark" href="#">Ajouter au panier</a><br>
                        <a class="btn btn-primary mb-2 mt-2 mx-1" href="{{ path('app_products_show', {'id': product.id}) }}">Détail</a>
                        <a class="btn btn-primary mb-2 mt-2 mx-1" href="{{ path('app_products_edit', {'id': product.id}) }}">Modifier</a>
                        </span>
                </div>
            </div>
        </div>
    {% else %}
        <p>votre panier est vide</p>
    {% endfor %}
</div>
{% endblock %}
