{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="container">
    <h1>Produits</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.image }}</td>
                <td>{{ product.description }}</td>
                <td>
                    <a class="btn btn-primary mx-1" href="{{ path('app_products_show', {'id': product.id}) }}">Afficher</a>
                    <a class="btn btn-warning mx-1" href="{{ path('app_products_edit', {'id': product.id}) }}">modifier</a>
                    {{ include('products/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">liste vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-success mx-1"href="{{ path('app_products_new') }}">Ajouter</a>
</div>
{% endblock %}
